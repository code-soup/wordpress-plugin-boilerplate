{
    "ignoreFiles": ["src/styles/node-modules/_sprites.scss"],
    "extends": "stylelint-config-property-sort-order-smacss",
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "indentation": 4,
        "no-empty-source": null,
        "at-rule-no-unknown": [
            true,
            {
                ignoreAtRules: [
                    "extend",
                    "at-root",
                    "debug",
                    "warn",
                    "error",
                    "if",
                    "else",
                    "for",
                    "each",
                    "while",
                    "mixin",
                    "include",
                    "content",
                    "return",
                    "function",
                    "apply",
                    "responsive",
                    "variants",
                    "screen",
                    "use",
                ],
            },
        ],
        "at-rule-empty-line-before": [
            "always",
            {
                except: [
                    "inside-block",
                    "first-nested",
                    "after-same-name",
                    "blockless-after-blockless",
                    "blockless-after-same-name-blockless",
                ],
            },
        ],
    },
}